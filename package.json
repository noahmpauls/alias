{
  "name": "alias",
  "version": "0.0.0",
  "type": "module",
  "description": "Browser extension for creating omnibox shortcuts.",
  "main": "manifest.json",
  "scripts": {
    "dev": "run-p -rl dev:*",
    "dev:scripts": "node esbuild.js --watch",
    "dev:types": "tsc --watch",
    "dev:webext": "web-ext run --devtools --start-url about:addons",
    "build": "run-s -l build:types build:scripts",
    "build:scripts": "node esbuild.js",
    "build:types": "tsc",
    "package": "run-s build:types build:scripts package:webext",
    "package:webext": "web-ext build"
  },
  "author": "Noah Pauls <noah@noahpauls.com>",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@types/webextension-polyfill": "^0.10.0",
    "esbuild": "0.20.2",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "web-ext": "^7.5.0",
    "webextension-polyfill": "^0.10.0"
  }
}
