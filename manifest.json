{
  "manifest_version": 3,
  "name": "Alias",
  "version": "0.0.0",
  "description": "Browser extension for creating omnibox shortcuts.",

  "icons": {
    "16": "assets/icons/icon_simple_16.png",
    "32": "assets/icons/icon_simple_32.png",
    "48": "assets/icons/icon_simple_48.png",
    "128": "assets/icons/icon_simple_128.png"
  },

  "omnibox": {
    "keyword": "!"
  },

  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_title": "Alias",
    "default_icon": "assets/icons/icon_simple_128.png",
    "default_popup": "ui/popup.html"
  },

  "background": {
    "service_worker": "dist/scripts/background.js",
    "scripts": ["dist/scripts/background.js"]
  },

  "web_accessible_resources": [
    {
      "resources": [
        "dist/ui/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "alias@noahpauls.com"
    }
  }
}
